<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Wizard Form View -->
    <record id="view_learning_import_wizard_form" model="ir.ui.view">
        <field name="name">learning.import.wizard.form</field>
        <field name="model">learning.import.wizard</field>
        <field name="arch" type="xml">
            <form string="导入 JSON 学习数据">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="import_mode" widget="radio"/>
                        </group>
                        <group>
                            <field name="overwrite_existing"/>
                        </group>
                    </group>
                    
                    <group attrs="{'invisible': [('import_mode', '!=', 'file')]}">
                        <field name="json_file" filename="json_filename"/>
                        <field name="json_filename" invisible="1"/>
                    </group>
                    
                    <group attrs="{'invisible': [('import_mode', '!=', 'text')]}">
                        <field name="json_text" placeholder="请粘贴 JSON 内容..." nolabel="1"/>
                    </group>
                    
                    <div attrs="{'invisible': [('show_preview', '=', False)]}">
                        <separator string="数据预览"/>
                        <field name="preview_data" nolabel="1" readonly="1"/>
                    </div>
                    
                    <field name="show_preview" invisible="1"/>
                </sheet>
                
                <footer>
                    <button name="action_preview_data" string="预览数据" type="object" class="btn-secondary"/>
                    <button name="action_import_data" string="开始导入" type="object" class="btn-primary" 
                            confirm="确定要导入这些数据吗？"/>
                    <button string="取消" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Import Wizard -->
    <record id="action_learning_import_wizard" model="ir.actions.act_window">
        <field name="name">导入 JSON 学习数据</field>
        <field name="res_model">learning.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_learning_import_wizard_form"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_learning_import_wizard"
              name="导入JSON数据"
              parent="menu_learning_config"
              action="action_learning_import_wizard"
              sequence="10"/>
</odoo>