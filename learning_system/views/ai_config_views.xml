<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Config Tree View -->
    <record id="view_ai_config_tree" model="ir.ui.view">
        <field name="name">learning.ai.config.tree</field>
        <field name="model">learning.ai.config</field>
        <field name="arch" type="xml">
            <tree string="AI Configurations">
                <field name="provider_name"/>
                <field name="provider_type"/>
                <field name="model_name"/>
                <field name="test_status" widget="badge" 
                       decoration-success="test_status == 'success'"
                       decoration-danger="test_status == 'failed'"
                       decoration-muted="test_status == 'not_tested'"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- AI Config Form View -->
    <record id="view_ai_config_form" model="ir.ui.view">
        <field name="name">learning.ai.config.form</field>
        <field name="model">learning.ai.config</field>
        <field name="arch" type="xml">
            <form string="AI Configuration">
                <header>
                    <button name="test_connection" string="测试连接" type="object" 
                            class="btn-primary" icon="fa-plug"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-check-circle" 
                                attrs="{'invisible': [('test_status', '!=', 'success')]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">连接正常</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" icon="fa-times-circle" 
                                attrs="{'invisible': [('test_status', '!=', 'failed')]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">连接失败</span>
                            </div>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Default Provider" bg_color="bg-success"
                            attrs="{'invisible': [('is_default', '=', False)]}"/>
                    
                    <group>
                        <group>
                            <field name="provider_name"/>
                            <field name="provider_type"/>
                            <field name="model_name"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="is_default"/>
                            <field name="test_status" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="API Configuration">
                        <field name="api_url" placeholder="https://api.openai.com/v1/chat/completions"/>
                        <field name="api_key" password="True"/>
                    </group>
                    
                    <group string="Generation Parameters">
                        <group>
                            <field name="timeout"/>
                            <field name="max_tokens"/>
                        </group>
                        <group>
                            <field name="temperature"/>
                        </group>
                    </group>
                    
                    <group string="Test Results" attrs="{'invisible': [('test_status', '=', 'not_tested')]}">
                        <field name="test_message" readonly="1" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Config Action -->
    <record id="action_ai_config" model="ir.actions.act_window">
        <field name="name">AI Configurations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">learning.ai.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your AI providers!
            </p>
            <p>
                Add API configurations for OpenAI, Gemini, DeepSeek, Claude or custom AI providers.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ai_config"
              name="AI 配置"
              parent="menu_learning_config"
              action="action_ai_config"
              sequence="20"/>
</odoo>