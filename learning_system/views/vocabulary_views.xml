<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vocabulary Tree View -->
    <record id="view_learning_vocabulary_tree" model="ir.ui.view">
        <field name="name">learning.vocabulary.tree</field>
        <field name="model">learning.vocabulary</field>
        <field name="arch" type="xml">
            <tree string="Vocabulary">
                <field name="sequence" widget="handle"/>
                <field name="learning_set_id"/>
                <field name="word"/>
                <field name="translation"/>
                <field name="lambda_value"/>
                <field name="cue_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vocabulary Form View -->
    <record id="view_learning_vocabulary_form" model="ir.ui.view">
        <field name="name">learning.vocabulary.form</field>
        <field name="model">learning.vocabulary</field>
        <field name="arch" type="xml">
            <form string="Vocabulary">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_cues" icon="fa-lightbulb-o">
                            <field string="Cues" name="cue_count" widget="statinfo"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <group>
                        <group>
                            <field name="learning_set_id"/>
                            <field name="word"/>
                            <field name="translation"/>
                            <field name="lambda_value"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="example"/>
                    </group>
                    <group>
                        <field name="common_mistake"/>
                    </group>
                    <notebook>
                        <page string="Learning Cues" name="cues">
                            <field name="cue_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="cue_type_char"/>
                                    <field name="text"/>
                                    <field name="strength"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vocabulary Action -->
    <record id="action_learning_vocabulary" model="ir.actions.act_window">
        <field name="name">Vocabulary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">learning.vocabulary</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vocabulary entry!
            </p>
            <p>
                Add words with translations, examples, and learning cues.
            </p>
        </field>
    </record>
</odoo>