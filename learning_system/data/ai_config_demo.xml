<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- OpenAI Configuration -->
        <record id="ai_config_openai" model="learning.ai.config">
            <field name="provider_name">OpenAI GPT-4</field>
            <field name="provider_type">openai</field>
            <field name="api_url">https://api.openai.com/v1/chat/completions</field>
            <field name="api_key">your-openai-api-key-here</field>
            <field name="model_name">gpt-4</field>
            <field name="timeout">60</field>
            <field name="max_tokens">4000</field>
            <field name="temperature">0.7</field>
            <field name="is_default">True</field>
            <field name="active">False</field>
        </record>

        <!-- Google Gemini Configuration -->
        <record id="ai_config_gemini" model="learning.ai.config">
            <field name="provider_name">Google Gemini Pro</field>
