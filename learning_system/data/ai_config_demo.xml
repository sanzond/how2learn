            <field name="model_name">gemini-pro</field>
            <field name="timeout">60</field>
            <field name="max_tokens">4000</field>
            <field name="temperature">0.7</field>
            <field name="active">False</field>
        </record>

        <!-- DeepSeek Configuration -->
        <record id="ai_config_deepseek" model="learning.ai.config">
            <field name="provider_name">DeepSeek Chat</field>
            <field name="provider_type">deepseek</field>
            <field name="api_url">https://api.deepseek.com/v1/chat/completions</field>
            <field name="api_key">your-deepseek-api-key-here</field>
            <field name="model_name">deepseek-chat</field>
            <field name="timeout">60</field>
            <field name="max_tokens">4000</field>
            <field name="temperature">0.7</field>
            <field name="active">False</field>
        </record>

        <!-- Claude Configuration -->
        <record id="ai_config_claude" model="learning.ai.config">
            <field name="provider_name">Anthropic Claude</field>
            <field name="provider_type">claude</field>
